{
  "name": "blog",
  "version": "1.0.0",
  "description": "koa的博客后台",
  "main": "main.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=dev 'ts-node' ./app/main.ts",
    "dev-watch": "cross-env NODE_ENV=dev nodemon --watch 'app/**/*' -e ts --exec 'ts-node' --files  ./app/main.ts ",
    "build": "tsc",
    "serve": "node build/main.js",
    "gc": "git-cz",
    "tslint": "tslint -p ./ --fix",
    "test": "jest --config jest.config.js --coverage --no-cache"
  },
  "author": "vnues",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^24.0.23",
    "@types/koa": "^2.11.0",
    "@types/koa-json-error": "^3.1.2",
    "@types/koa-morgan": "^1.0.4",
    "@types/koa-router": "^7.0.42",
    "@types/koa-static": "^4.0.1",
    "@types/mysql": "^2.15.8",
    "@types/node": "^12.12.14",
    "cross-env": "^6.0.3",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.1",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "koa": "^2.11.0",
    "koa-json-error": "^3.1.2",
    "koa-morgan": "^1.0.1",
    "koa-parameter": "^3.0.1",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "mysql": "^2.17.1",
    "prettier": "^1.19.1"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": " lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
