{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "esModuleInterop": true,
    "outDir": "build",
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*",
        "app/types/*"
      ]
    }
  },
  "include": [
    "app/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}