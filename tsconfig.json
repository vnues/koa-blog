{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "ESNext",
    "noImplicitAny": true,
    "typeRoots": ["./app/types"],
    "moduleResolution": "node",
     "types":["node"],  
    "sourceMap": false,
    "esModuleInterop": true,
    "experimentalDecorators":true,
    "forceConsistentCasingInFileNames":true,
    "strictPropertyInitialization":false,
    "outDir": "build",
    "baseUrl": "./"
  },
  "include": ["./app/**/*"],
  "exclude": ["node_modules", "./__tests__/*"]

}