{
  "compilerOptions": {
   // "strict": true,
    "module": "commonjs",
    "target": "ESNext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "experimentalDecorators":true,
    "forceConsistentCasingInFileNames":true,
    "outDir": "build",
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*",
        "app/types/"
      ]}
  },
  "include": [
    "app/**/*", "app/types"
  ],
  "exclude": [
    "node_modules"
  ]
}