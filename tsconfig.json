{
  "compilerOptions": {
   // "strict": true,
    "module": "commonjs",
    "target": "ESNext",
    "noImplicitAny": true,
    // 按需引入 -- 最终.d.ts会被编译
    "typeRoots": ["./app/types"],
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "sourceMap": false,
    "esModuleInterop": true,
    "experimentalDecorators":true,
    "forceConsistentCasingInFileNames":true,
    "outDir": "build",
    "baseUrl": "./"
  },
  // 编译只经过app下的
  "include": ["./app/**/*"],
  "exclude": ["node_modules", "./__tests__/*"]

}